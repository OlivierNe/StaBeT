@using StageBeheersTool.Models.Identity
@model Bedrijf

@{
    ViewBag.Title = "Bedrijfsgegevens";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            E-mail
        </dt>
        <dd>
            @Html.DisplayEmail(Model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Website)
        </dt>
        <dd>
            <a href="@Model.WebsiteUri" target="_blank">@Model.WebsiteUri</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adres)
        </dt>
        <dd>
            <a href="https://maps.google.com/?q=@Model.Adres" target="_blank">@Model.Adres</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefoon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefoon)
        </dd>

        <dt>@Html.DisplayNameFor(model => model.Bereikbaarheid)</dt>
        <dd class="omschrijving">@Html.DisplayFor(model => model.Bereikbaarheid)</dd>

        <dt>@Html.DisplayNameFor(model => model.Bedrijfsactiviteiten)</dt>
        <dd class="omschrijving">@Html.DisplayFor(model => model.Bedrijfsactiviteiten)</dd>
    </dl>
    @if (CurrentUser.IsAdmin() || CurrentUser.IsBegeleider())
    {
        <ul>
            <li>
                @Html.ActionLink("Contactpersonen", "VanBedrijf", "Contactpersoon", new { bedrijfId = Model.Id }, new { })
            </li>
            <li>
                @Html.ActionLink("Stageopdrachten", "VanBedrijf", "Stageopdracht", new { Model.Id }, new { })
            </li>
        </ul>
    }
    @if (CurrentUser.IsBedrijf())
    {
        @Html.ActionLink("Gegevens wijzigen", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink("Wachtwoord wijzigen", "ChangePassword", "Account", new { }, new { @class = "btn btn-default" })
    }
    else if (CurrentUser.IsAdmin() || CurrentUser.IsBegeleider())
    {
        @Html.ActionLink("Gegevens wijzigen", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        <p><a href="@ViewBag.Overzicht">Terug naar lijst</a></p>
    }
</div>
