@model IEnumerable<Bedrijf>

<div id="grid-tableDiv">
    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(b => b.Naam).Sanitized(false).Encoded(false)
            .RenderValueAs(bedrijf => Html.ActionLink(string.IsNullOrWhiteSpace(bedrijf.Naam) ? "/" : bedrijf.Naam, "Details", new { id = bedrijf.Id }));
        columns.Add(b => b.Email).Titled("E-mail");
        columns.Add(b => b.Telefoonnummer).Titled("Tel/gsm");
        columns.Add(b => b.Bedrijfsactiviteiten);
        columns.Add(b => b.Gemeente);
    }).WithPaging(10).Sortable().EmptyText("")
</div>