@model Begeleider

@{
    ViewBag.Title = "Begeleider verwijderen";
}

<h2>@ViewBag.Title</h2>
<h3>Deze begeleider definitief verwijderen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>

        <dt>
            HoGent E-mail
        </dt>

        <dd>
            @Html.DisplayEmail(Model.HogentEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefoon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefoon)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayEmail(Model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gsm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsm)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenOverzicht()
        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-danger" /> 
        </div>
    }
</div>

<p>
    @Html.OverzichtActionLink()
</p>
