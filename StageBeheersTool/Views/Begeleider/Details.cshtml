@model BegeleiderDetailsVM

@{
    ViewBag.Title = "Details";
    var message = TempData["message"];
}

<h2>Details</h2>
<div class="text-success">
    @message
</div>
<div>
    <h4>Begeleider</h4>
    <hr />
    <div class="row">
        <img class="col-sm-push-1 col-xs-2 img-responsive" src="@Url.Content(Model.Begeleider.FotoUrl)" />
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Begeleider.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Begeleider.Naam)
        </dd>
        <dt>
            Hogent E-mail
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Begeleider.HogentEmail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Begeleider.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Begeleider.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Begeleider.Gsmnummer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Begeleider.Gsmnummer)
        </dd>
        <dt>
            Adres
        </dt>
        <dd>
            @Model.Begeleider.Gemeente @Model.Begeleider.Postcode
        </dd>
        <dd>@Model.Begeleider.Straat @Model.Begeleider.Straatnummer</dd>

    </dl>
</div>
<p>
    @if (Model.ToonEdit)
    {
        @Html.ActionLink("Gegevens wijzigen", "Edit")
    }
</p>
