@model BegeleiderDetailsVM

@{
    ViewBag.Title = "Details";
    var message = TempData["message"];
    var imageUrl = string.IsNullOrWhiteSpace(Model.FotoUrl) ? "~/Images/profiel.jpg" : Model.FotoUrl;
}

<h2>Details</h2>
<div class="text-success">
    @message
</div>
<div>
    <h4>Begeleider</h4>
    <hr />
    <div class="row">
        <img class="col-sm-push-1 col-xs-2 img-responsive" src="@Url.Content(imageUrl)" />
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HogentEmail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HogentEmail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gsmnummer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsmnummer)
        </dd>
        <dt>
            Adres
        </dt>
        <dd>
            @Model.Gemeente @Model.Postcode
        </dd>
        <dd>@Model.Straat @Model.Straatnummer</dd>

    </dl>
</div>
<p>
    @if (Model.ToonEdit)
    {
        @Html.ActionLink("Gegevens wijzigen", "Edit")
    }
</p>
