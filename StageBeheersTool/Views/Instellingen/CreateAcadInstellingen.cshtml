@model AcademiejaarInstellingenVM

@{
    ViewBag.Title = Resources.TitelParametersAcademiejaar + " " + Model.Academiejaar;
    TempData["error"] = Html.ValidationSummary(true, "Opslaan mislukt:", new { });
}
<h2>@ViewBag.title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Academiejaar, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Academiejaar, new { htmlAttributes = new { @class = "form-control", autofocus = "" } })
            </div>
            @Html.ValidationMessageFor(model => model.Academiejaar, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">@Resources.DisplayBeginEindeSemester1</label>
            <div class="form-inline">
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Semester1Begin)
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Semester1Einde)
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">@Resources.DisplayBeginEindeSemester2</label>
            <div class="form-inline">
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Semester2Begin)
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Semester2Einde)
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DeadlineBedrijfStageEdit, new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DeadlineBedrijfStageEdit)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DatumAfstudeerbeurs, new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.DatumAfstudeerbeurs)
            </div>
        </div>
        <div>
            @Html.LabelFor(model => model.VrijeDagen, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.VrijeDagen, new { htmlAttributes = new { @class = "form-control", rows = 6 } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-success" />
                @Html.ActionLink("Annuleren", "HuidigAcademiejaar", "Instellingen", new { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/lib/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/lib/datepicker-nl-BE.js"></script>
    <script src="~/Scripts/academiejaarInstellingen.js"></script>
}
@section styles{
    <link href="~/Content/themes/base/core.css" rel="stylesheet" />
    <link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
    <link href="~/Content/themes/base/theme.css" rel="stylesheet" />
}