@{
    ViewBag.Title = "Stagecontract Template";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Huidige stagecontract template downloaden (Opslaan als Word-document(*.docx))", "DownloadStagecontractTemplate", "Instellingen", new { }, new { @class = "btn btn-default" })
</p>
<p>
    @Html.ActionLink("Stagecontract template testen", "StagecontractTemplateTesten", new { }, new { @class = "btn btn-default" })
</p>

<p>
    @using (Html.BeginForm("UploadStagecontractTemplate", "Instellingen", FormMethod.Post, new { enctype = "multipart/form-data", id = "stagecontractForm", style = "border: 1px solid; padding: 5px;" }))
    {
        <div>
            Nieuw stagecontract template <input type="file" name="file" id="file" accept="application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
            <button type="submit" class="btn btn-success">Stagecontract template vervangen</button>
        </div>
    }
</p>

<p>
    @Html.ActionLink("Oorspronkelijke template terugzetten (in geval van nood)", "StagecontractTemplateTerugzetten", new { }, new { @class = "btn btn-danger" })
</p>
