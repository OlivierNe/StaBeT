            emailType = "Stageopdracht afkeuren";
            break;
        case EmailType.StageopdrachtGewijzigd:
            emailType = "Stageopdracht gewijzigd";
            break;
        case EmailType.StageopdrachtAangemaakt:
            emailType = "Stageopdracht aangemaakt";
            break;
