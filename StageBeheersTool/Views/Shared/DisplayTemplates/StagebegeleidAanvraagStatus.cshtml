@model StagebegeleidAanvraagStatus
    @{
        var status = "";
        switch (Model)
        {
            case StagebegeleidAanvraagStatus.Goedgekeurd:
                status = "Goedgekeurd";
                break;
            case StagebegeleidAanvraagStatus.Afgekeurd:
                status = "Afgekeurd";
                break;
            case StagebegeleidAanvraagStatus.NietBeoordeeld:
                status = "Niet beoordeeld";
                break;
        }
    }
    @status
