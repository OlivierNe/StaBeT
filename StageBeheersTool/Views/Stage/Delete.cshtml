@model Stage

@{
    ViewBag.Title = "Stage verwijderen";
    var overzicht = ViewHelpers.GetOverzicht();
}

<h2>@ViewBag.Title</h2>

<h3>Deze student loskoppelen van de stageopdracht?</h3>
<div>
    <h4>Stage</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd>
            @Html.ActionLink(Model.Student.Naam, "Details", "Student",
                new { Model.Student.Id, overzicht }, new { target = "_blank" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht)
        </dt>
        <dd>
            @Html.ActionLink(Model.Stageopdracht.Titel, "Details", "Stageopdracht",
                new { Model.Stageopdracht.Id, overzicht }, new { target = "_blank" })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Semester)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Semester)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenOverzicht()
        <p class="form-actions no-color">
            <input type="submit" value="Loskoppelen" class="btn btn-danger" /> 
        </p>
    }
    <p>
        @Html.OverzichtActionLink()
    </p>
</div>
