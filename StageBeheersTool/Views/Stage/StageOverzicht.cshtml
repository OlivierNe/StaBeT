@model StageListVM

@{
    ViewBag.Title = Resources.TitelOverzichtStages + " " + AcademiejaarHelper.HuidigAcademiejaar();
}
<h2>@ViewBag.Title</h2>

<a id="searchA" class="btn btn-default" style="display:inline">Zoeken</a>
@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "searchForm", @class = "form-inline" }))
{
    <div class="form-group">
        @Html.TextBoxFor(model => model.Student, new { @class = "form-control", placeholder = "Student" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Stageopdracht, new { @class = "form-control", placeholder = "Stageopdracht" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Bedrijf, new { @class = "form-control", placeholder = "Bedrijf" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Begeleider, new { @class = "form-control", placeholder = "Begeleider" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default" id="zoekenSubmit">Zoeken</button>
        <a id="CancelBtn" class="btn btn-default">Annuleren</a>
    </div>
}

@Html.Partial("_StageList")

@section scripts{
    <script src="~/Scripts/stagetool-list.js"></script>
}


