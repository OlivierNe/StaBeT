@model StagedossierAfkeurenVM

@{
    ViewBag.Title = "Stagedossier Afkeuren";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Titel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StageId)
        @Html.HiddenFor(model => model.StudentId)
        @Html.HiddenOverzicht()
        <div class="form-group">
            @Html.LabelFor(model => model.Aan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Aan, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.Aan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Reden, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reden, new { htmlAttributes = new { @class = "form-control", autofocus = "", rows = "10" } })
                @Html.ValidationMessageFor(model => model.Reden, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Afkeuren" class="btn btn-danger" />
            </div>
        </div>
    </div>
}


<p>
    @Html.OverzichtActionLink()
</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/stagetool-form.js"></script>
}
