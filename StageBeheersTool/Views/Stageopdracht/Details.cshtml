</h4>
<h2>Details</h2>
<div>
    <h4>Stageopdracht</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht.Titel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stageopdracht.Titel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht.Omschrijving)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stageopdracht.Omschrijving)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht.Semester)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stageopdracht.Semester)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht.AantalStudenten)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stageopdracht.AantalStudenten)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht.Academiejaar)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Stageopdracht.Academiejaar)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Stageopdracht.Specialisatie)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Stageopdracht.Specialisatie.Naam)
        </dd>
        <dt>@Html.DisplayNameFor(model => model.Stageopdracht.Bedrijf) </dt>
