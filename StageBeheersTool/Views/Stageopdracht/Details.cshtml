<p>
    @Html.ActionLink("Terug naar overzicht", "Index")
    @if (User.IsInRole("bedrijf"))
    {
        @Html.Raw("|")
        @Html.ActionLink("Aanpassen", "Edit", new { id = Model.Stageopdracht.Id })
    }
    @if (User.IsInRole("bedrijf") && Model.Stageopdracht.IsGoedgekeurd() == false)
    {
        @Html.Raw("|");
        @Html.ActionLink("Verwijderen", "Delete", new { id = Model.Stageopdracht.Id })
    }
    @if (Model.ToonToevoegen)
    {
        @Html.ActionLink("Toevoegen aan mijn voorkeurstages", "ToevoegenAanVoorkeur", "Stageopdracht",
            new { id = Model.Stageopdracht.Id }, new { @class = "btn btn-default", @title = "Toevoegen aan mijn voorkeurstages." })
    }
    @if (Model.ToonVerwijderenBtn)
    {
        @Html.ActionLink("Verwijderen uit mijn voorkeurstages", "VerwijderenUitVoorkeur", "Stageopdracht",
            new { id = Model.Stageopdracht.Id }, new { @class = "btn btn-default", @title = "Verwijderen uit mijn voorkeurstages." })
    }
</p>
