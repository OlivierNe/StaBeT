@model StageopdrachtIndexVM
@{
    ViewBag.Title = "Stageopdrachten";
    var message = TempData["message"];
}
<p class="text-success">
    @message
</p>
<h2>@ViewBag.Title</h2>

@if (Model.ToonSearchForm)
{
    <a id="searchA" class="btn btn-default" style="display:compact">Zoeken</a>
    using (Html.BeginForm(null, null, FormMethod.Get, new { id = "searchForm", @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Semester, new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.Semester, Model.SemesterList, "--Semester--",
                new { @class = "form-control", style = "width:auto" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AantalStudenten, new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.AantalStudenten, Model.AantalStudentenList, "--aantal studenten--",
                new { @class = "form-control", style = "width:auto" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SpecialisatieId, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.SpecialisatieId, Model.SpecialisatieList, "--specialisatie--",
                new { @class = "form-control", style = "width:auto" })
            </div>
        </div>
        if (User.IsInRole("bedrijf") == false)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Bedrijf, new { @class = "control-label col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Bedrijf, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Locatie, new { @class = "control-label col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Locatie, new { @class = "form-control" })
                </div>
            </div>
        }
        if (User.IsInRole("begeleider"))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Student, new { @class = "control-label col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Student, new { @class = "form-control" })
                </div>
            </div>
        }
        <div class="col-md-offset-1">
            <button type="submit" class="btn btn-default">Zoeken</button>
        </div>
    }
}
@if (User.IsInRole("bedrijf"))
{
    <p>
        @Html.ActionLink("Nieuwe stageopdracht aanmaken", "Create")
    </p>
}
@Html.Partial("_StageopdrachtList")

@section scripts{
    <script src="~/Scripts/stagetool.js"></script>
}