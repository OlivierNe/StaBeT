@model StageopdrachtIndexVM
@{
    ViewBag.Title = "Stageopdrachten";
    var message = TempData["message"];
}
<p class="text-success">
    @message
</p>
<h2>@ViewBag.Title</h2>

@if (Model.ToonSearchForm)
{
    <a id="searchA" class="btn btn-default" style="display:compact">Zoeken</a>
    using (Html.BeginForm(null, null, FormMethod.Get, new { id = "searchForm", @class = "form-horizontal" }))
    {
        <div class="form-group form-group-sm ">
            @Html.LabelFor(model => model.Semester, new { @class = "col-md-1" })
            @Html.DropDownListFor(model => model.Semester, Model.SemesterList, "--Semester--", new { @class = "col-md-2" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AantalStudenten, new { @class = "col-md-1" })
            @Html.DropDownListFor(model => model.AantalStudenten, Model.AantalStudentenList, "--aantal studenten--", new { @class = "col-md-2" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Soort, new { @class = "col-md-1" })
            @Html.EditorFor(model => model.Soort, new { @class = "col-md-10 form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Bedrijf, new { @class = "col-md-1" })
            @Html.EditorFor(model => model.Bedrijf, new { @class = "col-md-10 form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Locatie, new { @class = "col-md-1" })
            @Html.EditorFor(model => model.Locatie, new { @class = "col-md-10 form-control" })
        </div>
        if (User.IsInRole("begeleider"))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Student, new { @class = "col-md-1" })
                @Html.EditorFor(model => model.Student, new { @class = "col-md-10 form-control" })
            </div>
        }
        <div class="form-group">
            <div class="col-md-10">
                <button type="submit" class="btn btn-default">Zoeken</button>
            </div>
        </div>
    }
}
@if (User.IsInRole("bedrijf"))
{
    <p>
        @Html.ActionLink("Nieuwe stageopdracht aanmaken", "Create")
    </p>
}
@Html.Partial("_StageopdrachtList")

@section scripts{
    <script src="~/Scripts/stagetool.js"></script>
}