@model StageopdrachtIndexVM

<a id="searchA" class="btn btn-default" style="display:inline">Zoeken</a>
@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "searchForm", @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Academiejaar, new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.DropDownListFor(model => model.Academiejaar, Model.AcademiejaarSelectList, "--Academiejaar--",
                new { @class = "form-control", style = "width:auto" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Bedrijf, new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Bedrijf, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Student, new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            @Html.EditorFor(model => model.Student, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-offset-1">
        <button type="submit" class="btn btn-default" id="zoekenSubmit">Zoeken</button>
        <a id="CancelBtn" class="btn btn-default">Annuleren</a>
    </div>
}
