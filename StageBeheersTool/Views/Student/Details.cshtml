@model StudentDetailsVM
@{
    ViewBag.Title = "Details student";
}
<h2>@ViewBag.Title</h2>
<div>
    <hr />
    <div class="row">
        @if (Model.Foto != null)
        {
            <img class="col-sm-push-1 col-xs-2 img-responsive" src="data:image;base64,@Convert.ToBase64String(Model.Foto.FotoData)" alt="" id="foto"/>
        }
        else
        {
            <img class="col-sm-push-1 col-xs-2 img-responsive" src="@Url.Content("~/Images/profiel.jpg")" id="foto" alt="" />
        }
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.HogentEmail)
        </dt>
        <dd>
            @Html.DisplayEmail(Model.HogentEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayEmail(Model.Email)
        </dd>
        <dt>
            Adres
        </dt>
        <dd>
            @Model.Gemeente @Model.Postcode
        </dd>
        <dd>@Model.Straat</dd>
        <dt>
            @Html.NameFor(model => model.Keuzepakket)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Keuzepakket.Naam)
        </dd>
        <dt>
            Gsm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gsm)
        </dd>
    </dl>
</div>
<p>
    @if (Model.ToonEdit)
    {
        @Html.ActionLink("Gegevens wijzigen", "Edit", new { Model.Id, overzicht = ViewHelpers.GetOverzicht() },
            new { @class = "btn btn-default" })
    }
    @if (Model.ToonDelete)
    {
        @Html.ActionLink("Verwijderen", "Delete", new { Model.Id, overzicht = ViewHelpers.GetOverzicht() },
            new { @class = "btn btn-default" })
    }
</p>
@if (Model.ToonTerugNaarLijst)
{
    <p>
        @Html.OverzichtActionLink()
    </p>
}