@model IPagedList<Student>

@{
    ViewBag.Title = "Studenten";
}

<h2>@ViewBag.Title</h2>
<form method="post">
    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.SingleOrDefault().Naam)
            </th>
            <th>
                Hogent E-mail
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" value="@item.Id" name="id"/></td>
                <td>
                    @Html.ActionLink(item.Naam, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HogentEmail)
                </td>
            </tr>
        }
    </table>
    <input type="submit" value="submit"/>
</form>
@if (Model.PageCount > 1)
{
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions()
{
    LinkToPreviousPageFormat = "<span class='glyphicon glyphicon-arrow-left'></span>",
    LinkToNextPageFormat = "<span class='glyphicon glyphicon-arrow-right'></span>",
    DisplayPageCountAndCurrentLocation = true,
    PageCountAndCurrentLocationFormat = "Pagina {0} van {1}"
})
}